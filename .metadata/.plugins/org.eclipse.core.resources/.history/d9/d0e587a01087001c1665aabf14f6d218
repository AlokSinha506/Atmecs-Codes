package com.example.demo.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.HttpStatus;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.demo.model.Employee;
import com.example.demo.servicempl.EmployeeServiceImpl;

@RestController
@RequestMapping("/employees")
public class EmployeeController {
	@Autowired
	private EmployeeServiceImpl employeeServiceImpl;
	
	 public EmployeeController(EmployeeServiceImpl employeeServiceImpl) {
		super();
		this.employeeServiceImpl = employeeServiceImpl;
	}

	@RequestMapping("/employees")
		public List<Employee> getAllEmployee(){
			return EmployeeServiceImpl.getALLEmployees();	
	    }
    @GetMapping
         public List<Employee> getEmployeeById(@PathVariable("id") long employeeId){
    	return new List<Employee>(employeeServiceImpl.getEmployeeById(employeeId),HttpStatus.OK)
    }
    }
}
