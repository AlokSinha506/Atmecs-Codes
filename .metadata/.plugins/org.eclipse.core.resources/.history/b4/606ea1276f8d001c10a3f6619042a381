package com.example.demo.service;

import static org.junit.jupiter.api.Assertions.assertEquals;
import static org.mockito.Mockito.when;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.MockitoAnnotations;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.test.mock.mockito.MockBean;

import com.example.demo.exception.NotFoundException;
import com.example.demo.model.Employee;
import com.example.demo.model.EmployeeRequest;
import com.example.demo.model.Role;
import com.example.demo.repository.EmployeeRepository;

public class EmployeeServiceTest {
	
	@InjectMocks @Autowired
	EmployeeService employeeService;
	
	@MockBean
	EmployeeRepository employeeRepository;
	

	@BeforeEach
	void setUp() throws Exception{
		MockitoAnnotations.initMocks(this);
		}

      @Test
      final void saveEmployeeTest(EmployeeRequest employeeRequest) throws NotFoundException {
    	  
    	Employee emp= new Employee();
    	Role role=new Role();
    	emp.setId(1);
    	emp.setEmployeeId("145");
    	emp.setName("Alok");
    	emp.setPassword("Asinha");
    	emp.setRating(4.5f);
    	emp.setSalary(23987l);
    	role.setRole("employee");
    	 
    	when(employeeRepository.save(emp)).thenReturn(emp);
		assertEquals(emp,employeeService.saveEmployee(employeeRequest));
      }

}
