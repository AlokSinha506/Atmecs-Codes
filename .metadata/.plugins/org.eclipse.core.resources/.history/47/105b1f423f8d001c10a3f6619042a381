class EmployeeServicemplTest {

	@InjectMocks
	EmployeeServiceImpl employeeServiceImpl;
	
	@Mock
	EmployeeRepository employeeRepository;
	
	//Employee emp = new Employee();
	@BeforeEach
	void setUp() throws Exception{
		MockitoAnnotations.initMocks(this);
		}
	
	Role role=new Role();
      @Test
      final void saveEmployeeTest() throws NotFoundException {
    	  
    	Employee emp= new Employee();
    	Role role=new Role();
    	emp.setId(1);
    	emp.setEmployeeId("145");
    	emp.setName("Alok");
    	emp.setPassword("Asinha");
    	emp.setRating(4.5f);
    	emp.setSalary(23987l);
    	role.setRole("employee");
    	 
    	when(employeeRepository.save(emp)).thenReturn(emp);
    	assertEquals(emp,employeeServiceImpl.getEmployeeById("145"));
    	
        
    
}
